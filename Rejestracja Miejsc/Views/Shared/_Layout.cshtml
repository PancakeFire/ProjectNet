<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seat Reservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rejestracja_Miejsc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSS2/StyleSheet.css" asp-append-version="true" />
</head>
<body class="background-std text-grey2">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom  mb-3 zero-padding">
            <div class="container-fluid background-std">
                <a class="navbar-brand text-green margin-left" asp-area="" asp-controller="Home" asp-action="Index">Seat Reservation App</a>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-grey" asp-area="" asp-controller="Shows" asp-action="Index">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-grey" asp-area="" asp-controller="Reservations" asp-action="MyReservations">My Reservations</a>
                        </li>
                        
                    </ul>
                    <partial name="_LoginPartial" class="margin-right"/>
            </div>
        </nav>
    </header>


   


    <div class="container background-std">
       <main role="main" class="background-std">
            @RenderBody()
        </main>
    </div>
    




    <footer class="border-top footer text-muted background-std footer-bottom">
        <div class="container color-grey  center">
            <a>&copy; 2022 - Seat Reservation App</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
